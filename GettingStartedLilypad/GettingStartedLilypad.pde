/*
 * Intro to the LilyPad - CRAFT Video
 *
 * This basic Arduino example blinks an LED connected to pin 2.
 * Modified from original Arduino blink example.
 * 
 */

void setup()                      // run once, when the sketch starts
{
  pinMode(2, OUTPUT);            // sets the digital pin as output
}

void loop()                      // run over and over again
{
  digitalWrite(2, HIGH);         // sets the LED on
  delay(1000);                   // waits for a second
  digitalWrite(2, LOW);          // sets the LED off
  delay(1000);                   // waits for a second
}
